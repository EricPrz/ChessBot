#include <chrono>
#include <iostream>
#include <string>
#include <thread>
#include <vector>

bool running = true;

void read_smth(){
    std::cout << "hi, im listening" << std::endl;
    std::string msg;
    while (running){
        std::getline(std::cin, msg);
        std::cout << msg << std::endl;

        if (msg == "q"){
            running = false;
            return;
        }
    }
}

void print_smth(){
    while (running){
        std::this_thread::sleep_for(std::chrono::seconds(2));
        std::cout << "smth" << std::endl;
    }
}

